---
import { getImage } from "astro:assets"

import about from "@/assets/media/about.jpeg"
import { getLangFromUrl, useTranslations } from "@/i18n/utils"
import BaseLayout from "@/layouts/BaseLayout.astro"
import Prose from "@/components/Prose.astro"
import FrontmatterImage from "@/components/FrontmatterImage.astro"

const {
  frontmatter: { title, subtitle, author, description, cover },
} = Astro.props

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const bannerImage = await getImage({src: about, format: 'jpeg', width: 1200})
---

<BaseLayout
  title={`${title} | ${t("meta.title")}`}
  description={description}
  image={bannerImage.src}
>
  <main class="mx-auto min-h-screen w-full max-w-screen-xl pb-10">
    <div>
      <!-- cover image -->
      <div class="relative w-full">
        <div class="relative block w-full">
          <FrontmatterImage src={cover} alt={title} class="w-full" />
        </div>

        <div
          class="pointer-events-none absolute bottom-0 top-auto size-full translate-y-0 bg-gradient-to-t from-black/30 to-transparent"
        >
        </div>

        <div
          class="pointer-events-none absolute bottom-0 top-auto h-1/3 w-full translate-y-0 bg-gradient-to-t from-black/50 to-transparent"
        >
        </div>
      </div>

      <!-- header -->
      <header
        class="relative -mt-32 px-3 pb-14 sm:-mt-40 md:-mt-40 md:space-y-2"
      >
        <h1
          class="font-mono text-4xl font-bold uppercase text-white md:text-7xl"
        >
          {title}
        </h1>

        <p class="font-mono text-teal-300 md:text-xl">{author}</p>

        <p class="text-white md:text-xl">{subtitle}</p>
      </header>

      <!-- content -->
      <div class="mx-auto max-w-screen-md px-3">
        <Prose>
          <slot />
        </Prose>
      </div>
    </div>
  </main>
</BaseLayout>
